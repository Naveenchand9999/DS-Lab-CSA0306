#include <stdio.h>

int main() {
  int num;

  printf("Enter a number: ");
  scanf("%d", &num);

  while (num != -1) {
    if (num % 2 == 0) {
      printf("%d is even.\n", num);
    } else {
      printf("%d is odd.\n", num);
    }

    printf("Enter a number: ");
    scanf("%d", &num);
  }

  return 0;
}
